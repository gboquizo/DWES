{# src/Blogger/BlogBundle/Resources/views/Page/index.html.twig #}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta http-equiv="Content-Type" content="text/html" ; charset=utf-8"/>
    <title>{% block title %}symblog{% endblock %} - symblog</title>
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    {% block stylesheets %}
        <link href='http://fonts.googleapis.com/css?family=Irish+Grover' rel='stylesheet' type='text/css'>
        <link href='http://fonts.googleapis.com/css?family=La+Belle+Aurore' rel='stylesheet' type='text/css'>
        <link href="{{ asset('css/screen.css') }}" type="text/css" rel="stylesheet"/>
        <link href="{{ asset('css/sidebar.css') }}" type="text/css" rel="stylesheet"/>
        <link href="{{ asset('css/login.css') }}" type="text/css" rel="stylesheet"/>
    {% endblock %}
    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body>

<section id="wrapper">
    <header id="header">
        <div class="top">
            {% block navigation %}
                <nav>
                    <ul class="navigation">
                        <li><a href="{{ path('blog') }}">Home</a></li>
                        <li><a href="{{ path('about') }}">About</a></li>
                        <li><a href="{{ path('contact') }}">Contact</a></li>
                        {% if app.user %}
                            <li><a href="{{ path('logout')}}">Out</a></li>
                        {% else %}
                            <li><a href="{{ path('login')}}">Login</a></li>
                        {% endif %}

                        {% if app.user %}
                            <li><a href="{{ path('newBlog')}}">New Blog</a></li>
                        {% endif %}
                        <li><a id="custom-a" href="/~guillermo/proyectos">Return to server</a></li>
                    </ul>
                </nav>
            {% endblock %}
        </div>


        <h2>{% block blog_title %}<a href="{{ path('blog') }}">symblog</a>{% endblock %}</h2>
        <h3>{% block blog_tagline %}<a href="{{ path('blog') }}">creating a blog in Symfony2</a>{% endblock %}</h3>

    </header>

    {% block body %}
        <div class="login_usuario">
            <form action="{{ path('login') }}" method="post">
                <label for="username" id="lb_username">Username:</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}"/>

                <label for="password" id="lb_password">Password:</label>
                <input type="password" id="password" name="_password"/>

                <button type="submit" id="login">login</button>
            </form>
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
        </div>
    {% endblock %}
    <div id="footer">
        {% block footer %}
            No tienes una cuenta <a href="{{ path('registro') }}">Registrate</a>
        {% endblock %}
    </div>
</section>

{% block javascripts %}{% endblock %}
</body>

